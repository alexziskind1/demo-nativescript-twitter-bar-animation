<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page" actionBarHidden="true">

    <GridLayout class="wrapper" rows="auto, *" loaded="onWrapperLoaded">

        <ScrollView id="scrollView" class="inner" row="1">
            <StackLayout>
                <Image src="~/images/tweet.png" />
                <Image src="~/images/tweet.png" />
                <Image src="~/images/tweet.png" />
                <Image src="~/images/tweet.png" />
                <Image src="~/images/tweet.png" />
                <Image src="~/images/tweet.png" />
                <Image src="~/images/tweet.png" />
                <Image src="~/images/tweet.png" />
                <Image src="~/images/tweet.png" />
                <Image src="~/images/tweet.png" />

                <Button text="TAP" tap="{{ onTap }}" class="btn btn-primary btn-active"/>
                <Label text="{{ message }}" class="h2 text-center" textWrap="true"/>

            </StackLayout>
        </ScrollView>

        <GridLayout id="bar" class="bar" row="0">
            <GridLayout columns="60, *, 60">
                <Image src="~/images/twitter-avatar.png" class="img-twitter-avatar" col="0" />
                <Label col="1" text="Home" style="font-weight: bold;text-align:center;"></Label>
                <Image src="~/images/twitter-star.png" class="img-twitter-star" col="2" />
            </GridLayout>
        </GridLayout>

    </GridLayout>

</Page>
